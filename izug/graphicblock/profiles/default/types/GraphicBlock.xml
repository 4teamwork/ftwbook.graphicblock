<?xml version="1.0"?>
<object name="GraphicBlock"
   meta_type="Factory-based Type Information with dynamic views"
   i18n:domain="izug.graphicblock" xmlns:i18n="http://xml.zope.org/namespaces/i18n">
  <property name="title" i18n:translate="">GraphicBlock</property>
  <property name="description"
    i18n:translate="GraphicBlock_description">Graphic Block for embedding PDF files into Books</property>
  <property name="content_meta_type">GraphicBlock</property>
  <property name="content_icon">document_icon.gif</property>
  <property name="product">izug.graphicblock</property>
  <property name="factory">addGraphicBlock</property>
  <property name="immediate_view">atct_edit</property>
  <property name="global_allow">False</property>
  <property name="filter_content_types">False</property>
  <property name="allow_discussion">False</property>
  <property name="default_view">block_view</property>
  <property name="view_methods">
    <element value="block_view" />
  </property>
  <alias from="(Default)" to="(dynamic view)" />
  <alias from="edit" to="atct_edit" />
  <alias from="sharing" to="@@sharing" />
  <alias from="view" to="(selected layout)" />
  <action title="View" action_id="view" category="object" condition_expr=""
    url_expr="string:${object_url}/" visible="True">
    <permission value="View" />
  </action>
  <action title="Edit" action_id="edit" category="object" condition_expr=""
    url_expr="string:${object_url}/edit" visible="True">
    <permission value="Modify portal content" />
  </action>
  <action title="Edit" action_id="sl-edit" category="sl-actions"
     condition_expr="" url_expr="string:${object_url}/edit" visible="True">
   <permission value="Modify portal content"/>
  </action>
  <action title="Delete" action_id="sl-delete" category="sl-actions"
     condition_expr=""
     url_expr="string:${here/absolute_url}/delete_confirmation" visible="True">
   <permission value="Modify portal content"/>
  </action>
  <action title="Move Up" action_id="sl-moveup" category="sl-actions"
     condition_expr=""
     url_expr="string:${here/absolute_url}/block_control?action=moveup"
     visible="True">
   <permission value="Modify portal content"/>
  </action>
  <action title="Move Down" action_id="sl-movedo" category="sl-actions"
     condition_expr=""
     url_expr="string:${here/absolute_url}/block_control?action=movedo"
     visible="True">
   <permission value="Modify portal content"/>
  </action>
</object>
