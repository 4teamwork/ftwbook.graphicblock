<?xml version="1.0"?>
<object name="GraphicBlock"
        meta_type="Factory-based Type Information with dynamic views"
        i18n:domain="ftwbook.graphicblock"
        xmlns:i18n="http://xml.zope.org/namespaces/i18n">

    <property name="title" i18n:translate="">GraphicBlock</property>
    <property name="description"
              i18n:translate="GraphicBlock_description"></property>
    <property name="content_meta_type">GraphicBlock</property>
    <property name="content_icon">++resource++simplelayout.types.common-resources/paragraph_icon.gif</property>

    <property name="product">ftwbook.graphicblock</property>
    <property name="factory">addGraphicBlock</property>
    <property name="immediate_view">atct_edit</property>
    <property name="global_allow">False</property>
    <property name="filter_content_types">False</property>
    <property name="allow_discussion">False</property>

    <property name="default_view">paragraph_view</property>
    <property name="view_methods">
        <element value="paragraph_view" />
    </property>

    <alias from="(Default)" to="(dynamic view)"/>
    <alias from="edit" to="base_edit"/>
    <alias from="properties" to="base_metadata"/>
    <alias from="sharing" to="folder_localrole_form"/>
    <alias from="view" to="(selected layout)"/>

    <action action_id="view"
            title="View"
            visible="True"
            url_expr="string:${object_url}/view"
            category="object"
            condition_expr="">
        <permission value="View"/>
    </action>

    <action action_id="edit"
            title="Edit"
            visible="True"
            url_expr="string:${object_url}/edit"
            category="object"
            condition_expr="not:object/@@plone_lock_info/is_locked_for_current_user" >
        <permission value="Modify portal content"/>
    </action>

    <action action_id="sl-edit"
            title="Edit"
            visible="True"
            url_expr="string:${object_url}/edit"
            category="sl-actions"
            icon_expr="string:edit.gif"
            condition_expr="">
        <permission value="Modify portal content"/>
    </action>

    <action action_id="sl-delete"
            title="Delete"
            visible="True"
            url_expr="string:${here/absolute_url}/delete_confirmation"
            category="sl-actions"
            condition_expr=""
            icon_expr="string:delete_icon.gif">
        <permission value="Modify portal content"/>
    </action>

</object>
